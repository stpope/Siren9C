'From Squeak6.1alpha of 24 January 2023 [latest update: #22397] on 26 January 2023 at 10:59:42 am'!!StringHolder class methodsFor: '*Tools-yellow button menu' stamp: 'stp 1/26/2023 10:58'!codePaneMenu: aMenu shifted: shifted	"Utility method for the 'standard' codePane menu"	| editMenu findMenu fontMenu executeMenu otherMenu browseMenu |	editMenu := MenuMorph fromArray:  {				{'copy (c)' translated.					#copySelection}.			{'cut (x)' translated.					#cut}.			{'paste (v)' translated.					#paste}.			{'paste...' translated.					#pasteRecent}.			#-.			{'again (Z)' translated.					#redo}.			{'undo (z)' translated.					#undo}.			#-.			{'accept (s)' translated.					#accept}.			{'cancel (l)' translated.					#cancelSafely} }.	findMenu := MenuMorph fromArray:  {			{'find...(f)' translated.					#find}.			{'find again (g)' translated.			#findAgain}.			{'find and replace ...' translated.		#findReplace}.			{'do/replace again (j)' translated.		#again} }.	fontMenu := MenuMorph fromArray:  {			{'set font... (k)' translated.				#offerFontMenu}.			{'set style... (K)' translated.				#changeStyle}.			{'set alignment... (u)' translated.		#chooseAlignment} }.	executeMenu := MenuMorph fromArray:  {			{'do it (d)' translated.			#doIt}.			     			{'print it (p)' translated.		#printIt}.		     			{'inspect it (i)' translated.		#inspectIt}.		     			{'explore it (I)' translated.		#exploreIt}.		     			{'debug it (D)' translated.		#debugIt}.		     			#-.			{'explain' translated.			#explain}.			{'button for it' translated.		#buttonForIt}.		     			{'tally it' translated.			#tallyIt}.			{'spy on it' translated.			#spyOnIt}.			{'show bytecodes' translated.	#showBytecodes} }.	browseMenu := MenuMorph fromArray:  {			{'browse it (b)' translated.				#browseIt}.			{'senders of it (n)' translated.			#sendersOfIt}.			{'implementors of it (m)' translated.		#implementorsOfIt}.			{'references to it (N)' translated.			#referencesToIt}.			#-.			{'selectors containing it (W)' translated.	#methodNamesContainingIt}.			{'method strings with it (E)' translated.	#methodStringsContainingit}.			{'method source with it' translated.		#methodSourceContainingIt}.			{'class names containing it' translated.	#classNamesContainingIt}.			{'class comments with it' translated.		#classCommentsContainingIt}.			{'change sets with it' translated.			#browseChangeSetsWithSelector} }.	otherMenu := MenuMorph fromArray:  {			{'pretty print' translated.					#prettyPrint}.			{'pretty print with color' translated.		#prettyPrintWithColor}.			{'file it in (G)' translated.					#fileItIn}.			{'spawn (o)' translated.					#spawn}.			#-.			{'save contents to file...' translated.		#saveContentsInFile}.			{'send contents to printer' translated.	#sendContentsToPrinter} }.			{		{'copy (c)' translated.			#copySelection}.			{'cut (x)' translated.			#cut}.			{'paste (v)' translated.			#paste}.			#-.			{'do it (d)' translated.			#doIt}.			     			{'print it (p)' translated.		#printIt}.		     			{'inspect it (i)' translated.		#inspectIt}.		     			{'debug it (D)' translated.		#debugIt}.		     			#-.			{'browse it (b)' translated.				#browseIt}.			{'senders of it (n)' translated.			#sendersOfIt}.			{'implementors of it (m)' translated.	#implementorsOfIt}.	} do: [ :tuple |		tuple isSymbol				ifTrue: [aMenu addLine]				ifFalse: [aMenu add: tuple first action: tuple second]].	aMenu addLine.		aMenu add: 'Edit' subMenu: editMenu.	aMenu add: 'Find' subMenu: findMenu.	aMenu add: 'Execute' subMenu: executeMenu.	aMenu add: 'Browse' subMenu: browseMenu.	aMenu add: 'Font' subMenu: fontMenu.	aMenu add: 'Other' subMenu: otherMenu.	^ aMenu! !